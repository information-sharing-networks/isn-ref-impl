{:port 5001
 :version #include "version.edn"
 :site-name "ISN Site"
 :isn-purpose "ISN site for xyz" ; corresponds to CA entry point
 :site-root "http://localhost:5001"
 :rel-root "https://your.domain.tld" ; used as a prefix before rel links
 :rel-me-github "https://domain.tld/some-path" ; E.G. Github profile uri
 :author "signals.my-example.xyz" ; typically set to the sites domain e.g. 'signals.my-example.xyz'
 :authcn-ids #{} ; used if you would like to check the id from a bearer token e.g. :authcn-ids #{"example.com"}
 :microsub-uri "https://your.domain.tld/microsub/id" ; uri for microsub - e.d. setup via aperture
 :site-type "site" ; may be site (a site for any participating entity). mirror (a specific mirror where 'topics' are published) or isn (entry site)
 :days-from-now 7
 :indieauth-email "your@mail.com"
 :indielogin-uri "https://some-indielogin.tld/auth" ; uri for your preferred indielogin svc
 :redirect-uri "/your-redirect-uri" ; used to point to the URI for your protected content
 :data-path "" ; used to point to a data directory somewhere on disk e.g. /home/you/.isn.isn-name/site-acme/data
 :environment "dev" ; setting the env to dev will remove the need to supply a valid token
 :dev-site "https://example.com" ; default site to use in token lookup site resolution in dev mode  e.g. :dev-site "https://example.com"
 :support-email "support@email.com" ; a configurable support email which may point to either an ISN Executive Committee tech function or an ISN Network Executive Committee tech function
 :network-site "https://some-network-site.tld" ; the URI for the ISN network site or entry point - all participant sites and mirrors should be able to link back to it
 :csp-settings {:connect-src #ref [:site-root]
                :frame-ancestors #ref [:site-root]
                :font-src #ref [:site-root]
                :form-action #ref [:site-root]
                :frame-src #ref [:site-root]                                                           :img-src #ref [:site-root]
                :manifest-src #ref [:site-root]
                :media-src #ref [:site-root]
                :object-src #ref [:site-root]
                :style-src #ref [:site-root]
                :script-src #ref [:site-root]} ; security settings
 }
